<vbox width="100%">
    <style>
        .configTitle {
            width: 100%;
            text-align: center;
            font-size: 20px;
            font-name: "Inconsolata";
            color: #FFFFFF;
            filter: drop-shadow(1, 45, #000000, 1, 6, 6, 3, 3);
        }
        #configView {
            background-color: #000000;
            background-opacity: 0.2;
            border-radius: 0px;
            width: 100%;
        }
        .intContainer, .boolContainer {
            background-color:#000000;
            background-opacity: 0.1;
            padding: 7px;
            border-radius: 5px;
            border:2px solid #444444;
            width: 85%;
            vertical-align: center;
            horizontal-align: center;

        }
        .intStepper {
            height: 30px;
            width: 142px;
            font-name: "Inconsolata";
            font-size: 17px;
            background-opacity: 0.7;
            vertical-align: right;
            horizontal-align: right;
        }
        .floatStepper {
            height: 28px;
            width: 142px;
            font-name: "Inconsolata";
            font-size: 17px;
            background-opacity: 0.7;
        }
        .configLabel {
            font-name: "Inconsolata";
            font-size: 17px;
            vertical-align: center;
            color: #EEEEEE;
            filter: drop-shadow(1, 45, #000000, 1, 6, 6, 3, 3);
        }
        .resetBtn {
            icon: "images/modmenu/ui/reset.png";
            width: 32px;
            height: 32px;
            border-radius: 0px;
        }
        .resetBtn:hover {
            border-radius: 5px;
        }
        #configButton {
            width: 257px;
            height: 35px;
            border-radius: 5px;
            font-size: 16px;
        }
        #configButton:hover {
            border-radius: 12px;
        }
        .boolSwitch @keyframes switchAnimateSelectedPill {
            0% {
                pos: 0;
                background-color: $default-background-color;
            }
            100% {
                pos: 100;
                background-color: #1f8222;
            }
        }
    </style>
</vbox>